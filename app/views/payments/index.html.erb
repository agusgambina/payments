<div class='container'>
    <div class='row'>
        <div class='col-md-4'>
            <img src="/images/logo.png" height="134px" width="230px" />
        </div>
        <div class='col-md-8 align-bottom'>
        <h3>Editar Informe de Pago</h3>
        </div>
    </div>
    <div class='row'>
        <div class='col-md-10 offset-md-1'>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Edificio</th>
                <th scope="col">Unidad</th>
                <th scope="col">Fecha</th>
                <th scope="col">Nombre</th>
                <th scope="col">Monto</th>
                <th colspan="3" scope="col"></th>
              </tr>
            </thead>
            <tbody>
            <% @payments.each do |payment| %>
              <tr>
                <td><%= payment.building.formatted_name %></td>
                <td><%= payment.unit %></td>
                <td><%= payment.date %></td>
                <td><%= payment.name %></td>
                <td><%= payment.amount %></td>
                <td><%= link_to 'Show', payment_path(payment) %></td>
                <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
                <td><%= link_to 'Destroy', payment_path(payment),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>      