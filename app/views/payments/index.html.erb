
<h1>Listing payments</h1>
 
<table>
  <tr>
    <th>Edificio</th>
    <th>Unidad</th>
    <th>Fecha</th>
    <th>Nombre</th>
    <th>Monto</th>
    <th></th>
  </tr>
 
  <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.building %></td>
      <td><%= payment.unit %></td>
      <td><%= payment.date %></td>
      <td><%= payment.name %></td>
      <td><%= payment.amount %></td>
      <td><%= link_to 'Show', payment_path(payment) %></td>
      <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
      <td><%= link_to 'Destroy', payment_path(payment),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>